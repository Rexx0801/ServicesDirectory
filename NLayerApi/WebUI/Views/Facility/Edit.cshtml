@model Common.Dto.FacilityDto

<h1>Edit Facility</h1>
<hr />
<form asp-action="Edit" class="container">
    <input type="hidden" asp-for="FacilityId" />

    <div class="mb-3 row">
        <label asp-for="FacilityType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FacilityType" class="form-control" />
            <span asp-validation-for="FacilityType" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="FacilityDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FacilityDescription" class="form-control" />
            <span asp-validation-for="FacilityDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="RoomCapacity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoomCapacity" class="form-control" />
            <span asp-validation-for="RoomCapacity" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="RoomSize" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoomSize" class="form-control" />
            <span asp-validation-for="RoomSize" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="ConnectivityType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ConnectivityType" class="form-control" />
            <span asp-validation-for="ConnectivityType" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="WirelessAccessInformation" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="WirelessAccessInformation" class="form-control" />
            <span asp-validation-for="WirelessAccessInformation" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="LeadContact" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="LeadContact" class="form-control" />
            <span asp-validation-for="LeadContact" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="RoomHost" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoomHost" class="form-control" />
            <span asp-validation-for="RoomHost" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="RoomAndEquipmentNotes" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="RoomAndEquipmentNotes" class="form-control"></textarea>
            <span asp-validation-for="RoomAndEquipmentNotes" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label for="IsActive" class="col-sm-2 col-form-label">Active</label>
        <div class="col-sm-10">
            <select asp-for="IsActive" class="form-control">
                <option value="true" selected="@Model.IsActive == true">Active</option>
                <option value="false" selected="@Model.IsActive == false">Inactive</option>
            </select>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="PremiseId" class="col-sm-2 col-form-label">Premise</label>
        <div class="col-sm-10">
            <select asp-for="PremiseId" class="form-control">
                <option value="">Select Premise</option>
                @foreach (var item in (SelectList)ViewBag.Premises)
                {
                    <option value="@item.Value" selected="@item.Value == Model.PremiseId.ToString()">@item.Text</option>
                }
            </select>
            <span asp-validation-for="PremiseId" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
