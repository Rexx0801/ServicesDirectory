@model Common.Dto.MinorWorkDto

<h1>Edit Minor Work</h1>
<hr />
<form asp-action="Edit" class="container">
    <input type="hidden" asp-for="MinorWorkId" />

    <div class="mb-3 row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="EstimatedCost" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EstimatedCost" class="form-control" />
            <span asp-validation-for="EstimatedCost" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="ActualCost" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ActualCost" class="form-control" />
            <span asp-validation-for="ActualCost" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Status" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select name="Status">
            @if(Model.Status == true)
            {
                <option value="true">Active</option>
                <option value="false">No Active</option>
            }else{
                    <option value="false">No Active</option>
                    <option value="true">Active</option>
            }
            </select>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Directorate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Directorate" class="form-control" />
            <span asp-validation-for="Directorate" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Contact" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Contact" class="form-control" />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="AuthorisedByName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="AuthorisedByName" class="form-control" />
            <span asp-validation-for="AuthorisedByName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label for="Status" class="col-sm-2 col-form-label">Active</label>
        <div class="col-sm-10">
            <select name="IsActive" id="IsActive">
                @if (Model.IsActive == true)
                {
                    <option value="true">Active</option>
                    <option value="false">No Active</option>
                }
                else
                {
                    <option value="false">No Active</option>
                    <option value="true">Active</option>
                }
            </select>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="PremiseId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PremiseId" class="form-control" />
            <span asp-validation-for="PremiseId" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
