@model Common.Dto.PremiseDto

@{
    ViewData["Title"] = "Confirm Action";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            text-align: center;
        }

        h1 {
            color: #007bff;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
            margin-bottom: 30px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
            margin: 5px;
            display: inline-block;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }

        .btn:hover {
            opacity: 0.9;
        }

        form {
            display: inline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Confirm Activation</h1>
        <p>Are you sure you want to activate this premise?</p>
        <form asp-action="Activate" method="post">
            <input type="hidden" name="id" value="@Model.PremiseId" />
            <button type="submit" class="btn btn-success">Activate</button>
        </form>
        <form asp-action="CancelActivation" method="post">
            <input type="hidden" name="id" value="@Model.PremiseId" />
            <button type="submit" class="btn btn-secondary">Cancel</button>
        </form>
    </div>
</body>
</html>
